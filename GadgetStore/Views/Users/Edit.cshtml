@model GadgetStore.ViewModels.EditUserViewModel

@{
    ViewBag.Title = "Редактирование пользователя";
}

<form asp-action="Edit" asp-controller="Users">
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>

    <div class="row justify-content-center">
        <div class="col-6">
            <div class="form-group col-6 text-center">
                <label class="control-label font-weight-light mb-0"> Имя </label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-6 text-center">
                <label class="control-label font-weight-light mb-0"> Фамилия </label>
                <input asp-for="SecondName" class="form-control" />
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
            <div class="form-group col-6 text-center">
                <label class="control-label font-weight-light mb-0"> Роль </label>
                <select asp-for="Role" class="smoth-border form-control form-control-sm" asp-items="ViewBag.Roles"></select>
            </div>
            <div class="form-group col-6 text-center">
                <label class="control-label font-weight-light mb-0"> Логин </label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group col-6 text-center">
                <label class="control-label font-weight-light mb-0"> Пароль </label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
        
</form>