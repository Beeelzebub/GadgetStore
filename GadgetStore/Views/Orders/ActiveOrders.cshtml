@model IEnumerable<GadgetStore.Models.Order>

@{
    Layout = "_Management";
}

@if (Model.Count() == 0)
{
<div class="container">
    <span>Активных заказов нет</span>
</div>
}
else
{
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Номер заказа
                    </th>
                    <th>
                        Товар
                    </th>
                    <th>
                        Адрес
                    </th>
                    <th>
                        Дата заказа
                    </th>
                    <th>
                        Покупатель
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @foreach (CartLine cart in item.GetCartObject().Lines())
                            {
                                <p>@cart.Count x @cart.Gadget.Name</p>
                            }
                        </td>
                        <td>
                            @item.Address.ToString()
                        </td>
                        <td>
                            @item.StartDate.ToShortDateString()
                        </td>
                        <td>
                            @item.Customer.FirstName @item.Customer.SecondName <br />
                            (@item.Address.PhoneNumber)
                        </td>
                        <td>
                            <a asp-controller="Orders" asp-action="SendOrder" asp-route-id="@item.Id">Отправлен</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

