<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GadgetStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand logo-text" asp-area="" asp-controller="Home" asp-action="Index"> <i class="fa fa-mobile"></i> GadgetStore</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Gadgets" asp-action="Index">Магазин</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Контакты</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="navbar-item">
                            <a asp-controller="MyCart" asp-action="Index" class="nav-link pr-3"><i class="fa fa-shopping-cart"></i> Корзина</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index"><i class="fa fa-tasks"> </i> Управление </a>
                                </li>
                            }
                            else if (User.IsInRole("seller"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="ActiveOrders"><i class="fa fa-tasks"> </i> Управление </a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link pr-2" asp-area="" asp-controller="Orders" asp-action="MyOrders"><i class="fa fa-truck"> </i> Заказы</a>
                            </li>

                            <li class="navbar-item">
                                <a asp-controller="Account" asp-action="PrivateRoom" class="nav-link"><i class="fa fa-user"></i> @User.Identity.Name</a>
                            </li>
                        }
                        else
                        {
                            <li class="navbar-item">
                                <a class="btn btn-outline-info my-2 my-sm-0" asp-controller="Account" asp-action="Login">
                                    Вход
                                </a>
                            </li>
                            <li class="navbar-item">
                                <a asp-controller="Account" asp-action="Register" class="nav-link">Нет аккаунта?</a>
                            </li>

                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2021 - GadgetStore
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
