@model GadgetStore.ViewModels.RegisterViewModel

<div class="text-center logo">
    <h1 class="display-4">Регистрация нового пользователя</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-4 text-center content pt-5">
        <form method="post" asp-controller="Account" asp-action="Register">

            <div class="row justify-content-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h4>Личные данные</h4>
                <div class="col-9">
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label font-weight-light mb-0"></label><br />
                        <input asp-for="FirstName" class="form-control smoth-border form-control-sm" placeholder="Имя" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SecondName" class="control-label font-weight-light mb-0"></label><br />
                        <input asp-for="SecondName" class="form-control smoth-border form-control-sm" placeholder="Фамилия" />
                        <span asp-validation-for="SecondName" class="text-danger"></span>
                    </div>
                </div>

                <h4>Данные для входа</h4>
                <div class="col-9">
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label font-weight-light mb-0"></label><br />
                        <input asp-for="UserName" class="form-control smoth-border form-control-sm" placeholder="Логин" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label font-weight-light mb-0"></label><br />
                        <input asp-for="Password" class="form-control smoth-border form-control-sm" placeholder="Пароль" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordConfirm" class="control-label font-weight-light mb-0"></label><br />
                        <input asp-for="PasswordConfirm" class="form-control smoth-border form-control-sm" placeholder="Подтвердите пароль" />
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                    </div>
                </div>

                <div class="row w-100 justify-content-center pt-5 pb-5">
                    <div class="col-5">
                        <input type="submit" value="Регистрация" class="btn btn-block btn-outline-info btn-sm" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

