@model GadgetStore.ViewModels.GadgetViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Gadget</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GadgetTypeId" class="control-label"></label>
                <select asp-for="GadgetTypeId" class="form-control" asp-items="ViewBag.GadgetTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Memory" class="control-label"></label>
                <input asp-for="Memory" class="form-control" />
                <span asp-validation-for="Memory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RAM" class="control-label"></label>
                <input asp-for="RAM" class="form-control" />
                <span asp-validation-for="RAM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagonal" class="control-label"></label>
                <input asp-for="Diagonal" list="Diagonals" class="form-control" />
                <span asp-validation-for="Diagonal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScreenResolution" class="control-label"></label>
                <input asp-for="ScreenResolution" list="ScreenResolutions" class="form-control" />
                <span asp-validation-for="ScreenResolution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" list="Colors" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPU" class="control-label"></label>
                <input asp-for="CPU" list="CPUs" class="form-control" />
                <span asp-validation-for="CPU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" list="Manufacturers" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Изображение</label>
                <input name="Image" type="file" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<datalist id="Manufacturers">
    @{ 
        foreach(var item in ViewBag.Manufacturers)
        {
            <option value="@item"></option>
        }
    }
</datalist>

<datalist id="Diagonals">
    @{
        foreach (var item in ViewBag.Diagonals)
        {
            <option value="@item"></option>
        }
    }
</datalist>

<datalist id="ScreenResolutions">
    @{
        foreach (var item in ViewBag.ScreenResolutions)
        {
            <option value="@item"></option>
        }
    }
</datalist>

<datalist id="Colors">
    @{
        foreach (var item in ViewBag.Colors)
        {
            <option value="@item"></option>
        }
    }
</datalist>

<datalist id="CPUs">
    @{
        foreach (var item in ViewBag.CPUs)
        {
            <option value="@item"></option>
        }
    }
</datalist>




<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
